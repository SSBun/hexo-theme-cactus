.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 16px
      min-width: 100px
      color: $color-meta
      font-size: 14px
    
    .post-mark-list
      display: inline-block

      .post-mark-item
        font-size: 0.6em
        font-style: italic
        font-weight: bold
        display: inline-block
        color: #EEEEEE
        padding-left: 5px
        padding-right: 5px                
        border-radius: 4px
      .red
        background-color: #C65146      
      .blue
        background-color: #0277BD
      .green
        background-color: #56A902
      .gray
        background-color: #8b8687
      

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    p
      display: inline
